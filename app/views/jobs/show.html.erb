  <h1 class="h1">apply to this job</h1>

<div class="card card-block" style="width: 100%;">
  <h3 class="card-title">  <div class="vacancy">
        <h2> <%= @job.job_title %></h2>
    </div></h3>
  <p class="card-text"  <div class="vacancy">
    <h4> <%= @job.location %> </h4>
    <h4><%= @job.salary %></h4>
      <br>

      <%= @job.description %>
      <br>

    </div></p>

  <% if user_signed_in? %>
    <a href="#" class="btn btn-primary" data-toggle="modal" data-target="#myModal">Apply to this job</a>
  <% elsif !employer_signed_in? %>
    <%= link_to "Apply to this job", new_user_session_path, class: "btn btn-primary" %>
  <% end %>

  <div class="modal fade" id="myModal" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Applying to this job</h4>
      </div>
      <div class="modal-body">
        <p>SHOW YOUR MOTIVATON.


            <%= simple_form_for [@job, @application], url: job_applications_path(@job), method: :post do |f| %>
              <%= f.input :description %>

              <%= f.button :submit %>
            <% end %>






        </p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>

  </div>
</div>
</div>

<br><br><br><br><br>
</div>
