  <div class="container">
  <div class="tickets-wrapper">
    <h1>Tickets</h1>
      <% @posts.each do |post|%>
    <div class="card">
      <h2><%= link_to post.title, post, class:"ticket-title" %> </h2>
      <p>
      Published
      <%= time_ago_in_words(post.created_at) %>
      by
      <h4><%= post.user.first_name %>
      <%= post.user.last_name %></h4>
      </p>
    </div>
      <% end %>
      <%= link_to "New Post", new_post_path, class: "navbar-wagon-button btn"%>

      </div>
</div>
