<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
  <%= image_tag "ruby1.png" %>
  <span class="navbar-wagon-brand-title">RubyRubyRuby</span>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">
    <!-- Jobs text link -->
    <%= link_to t(".jobs", default: "Jobs"), jobs_path, class: "navbar-wagon-item navbar-wagon-link" %>



    <!-- Developers text link -->
    <%= link_to t(".developers", default: "Developers"), developers_path, class: "navbar-wagon-item navbar-wagon-link" %>


    <!-- Tickets text link -->

    <!-- Different navigation if login or not -->
    <% if user_signed_in? %>

    <!-- Notification -->

    <!-- Profile picture and dropdown -->
    <div class="navbar-wagon-item">
      <div class="dropdown">
        <%= image_tag current_user.photo, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">


          <!-- So this code won't show the homepage in the dropdown menu if you're at the homepage
          params [controller] part gives you the controller and params action give you the method that deals witht the specific page.  -->
          <% unless params["controller"] == "pages" && params["action"] == "home" %>
          <% end %>
          <li>
            <%= link_to developers_profile_path do %>
            <i class="fa fa-user"></i> <%= t ".profile", default: "Profile" %>
            <% end %>
          </li>

          <li>
            <%= link_to developers_profile_path do %>
            <i class="fa fa-home"></i>  <%= t ".profile", default: "Edit Resume" %>
            <% end %>
          </li>


          <% if current_employer %>

          <% end %>
          <li>
            <%= link_to destroy_user_session_path, method: :delete do %>
            <i class="fa fa-sign-out"></i>  <%= t ".sign_out", default: "Log out" %>
            <% end %>
          </li>
        </ul>
      </div>
    </div>

    <% elsif employer_signed_in? %>

    <!-- Notification -->
    <%= link_to "#", class: "navbar-wagon-item navbar-wagon-link" do %>
    <div class="badge-container">
      <i class="fa fa-envelope-o"></i>
      <div class="badge badge-blue">3</div>
    </div>
    <% end %>

    <!-- Profile picture and dropdown -->
    <div class="navbar-wagon-item">
      <div class="dropdown">
        <%= image_tag "http://placehold.it/30x30", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li>
            <%= link_to root_path do %>
            <i class="fa fa-home"></i>  <%= t ".profile", default: "Home" %>
            <% end %>
          </li>
          <li>
            <%= link_to employers_profile_path do %>
            <i class="fa fa-user"></i> <%= t ".profile", default: "Profile" %>
            <% end %>
          </li>
          <li>
            <%= link_to new_employers_job_path  do %>
            <i class="fa fa-plus"></i>  <%= t ".profile", default: "Add a New Job" %>
            <% end %>
          </li>


          <li>
            <%= link_to employers_jobs_path do %>
            <i class="fa fa-pencil "></i>  <%= t ".profile", default: "View your jobs" %>
            <% end %>
          </li>

          <li>
            <%= link_to destroy_employer_session_path, method: :delete do %>
            <i class="fa fa-sign-out"></i>  <%= t ".sign_out", default: "Log out" %>
            <% end %>
          </li>
        </ul>
      </div>
    </div>

    <% else %>
    <!-- Login text link -->
    <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>

    <!-- Button (call-to-action) -->
    <%= link_to t(".top_call_to_action", default: "Employers"), new_employer_session_path, class: "navbar-wagon-item navbar-wagon-button btn" %>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><a href="#">Some mobile link</a></li>
        <li><a href="#">Other one</a></li>
        <li><a href="#">Other one</a></li>
      </ul>
    </div>
  </div>
</div>
