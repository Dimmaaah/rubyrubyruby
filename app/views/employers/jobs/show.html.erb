
<div class="container">
  <h1 class="h1-test"></h1>


    <h3>Received Applications</h3>

      <% @applications.each do |application| %>

      <div class="card jobs-card">

        <h3 class="jobs-title">
          <%= link_to developer_path(application.user) do %>
            <%= application.user.first_name.capitalize %>
            <%= application.user.last_name.capitalize %>
          <% end %>
        </h3>
          <br>
          <%= application.user.email %>
          <br>
          <%= application.description %>
          <br>
          <% if application.user.resume.photo.present? %>
            <a href="<%= application.user.resume.photo %>" class="navbar-wagon-button btn" target="_blank">Resume</a>
          <% else %>
            <%= link_to "Resume", developer_path(application.user), class: "navbar-wagon-button btn", target: "_blank" %>
          <% end %>

        </div>

        <% end %>






<div class="card jobs-card">
  <div class="vacancy">
      <div class="vacancy">
      <h2 class="jobs-title"> <%= @job.job_title %></h2>
      </div>
      <br>
        <% @job.skills.each do |skill| %>
        <span class="skill"><%= skill.name %></span>
        <% end %>
      </div>
      <br>
      <div class="vacancy">
        <%= @job.location.capitalize %>
      </div>
      <br>
      <div class="vacancy">
        <%= @job.salary %>
      </div>
      <div class="vacancy">
        <%= @job.description %>
        </div>
          <div class="vacancy">
              <br>
            <%= link_to 'Edit Job', edit_employers_job_path, class: "edit-profile-btn" %>
        </div>
</div>
</div><br><br><br><br><br><br>
