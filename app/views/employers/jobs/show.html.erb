
<div class="container">
  <h1 class="h1-test">here you'll find the jobs that are created by the current employer</h1>


    received applications:
  <div class="row">
      <% @applications.each do |application| %>

      <div class="card jobs-card">

      <h3 class="jobs-title"><%= application.user.first_name.capitalize %>
      <%= application.user.last_name.capitalize %></h3>
      <br>
      <%= application.user.email %>
      <br>
     <%= application.description %>
     <br>
     <a href="<%= application.user.resume.photo %>" class="navbar-wagon-button btn" target="_blank">Resume</a>

     <a href="<%= application.user.photo %>"></a>
     </div>

    <% end %>
</div>

<div class="card jobs-card">
  <div class="vacancy">
    <br><br>
      <div class="vacancy">
      <h2> <%= @job.job_title %></h2>
      </div>
        <% @job.skills.each do |skill| %>
        <span class="skill"><%= skill.name %></span>
        <% end %>
      </div>
      <div class="vacancy">
        <%= @job.location.capitalize %>
      </div>
      <div class="vacancy">
        <%= @job.salary %>
      </div>
      <div class="vacancy">
        <%= @job.description %>
        </div>
          <div class="vacancy">
              <br>
            <%= link_to 'Edit Job', edit_employers_job_path, class: "edit-profile-btn" %>
        </div>
</div>
